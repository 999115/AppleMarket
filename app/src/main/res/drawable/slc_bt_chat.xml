<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <size
                android:height="30dp"
                android:width="65dp"/>
            <corners
                android:radius="6dp"/>
            <solid
                android:color="@color/dark_apple"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <size
                android:height="30dp"
                android:width="65dp"/>
            <corners
                android:radius="6dp"/>
            <solid
                android:color="@color/apple"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

</selector>



